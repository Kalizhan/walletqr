<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.OnlyMoneyFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/imgEmptyFolderMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/empty_folder" />

        <TextView
            android:id="@+id/tvEmptyMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Пусто. Добавьте записи о деньгах"
            android:textSize="20sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerMoney"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/unique_money"
            android:paddingBottom="60dp"
            android:visibility="gone"/>

    </LinearLayout>


</FrameLayout>